{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowUmdGlobalAccess": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2020",
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "strict": true
  },
  "exclude": [
    "node_modules"
  ]
}